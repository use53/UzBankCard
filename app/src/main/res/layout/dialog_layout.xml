<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.Design.TextInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp"
        android:id="@+id/til_dialog"
        android:theme="@style/Widget.Design.TextInputLayout"
        android:textColorHint="@android:color/black"
        app:hintTextColor="@color/black"
        app:startIconDrawable="@drawable/ic__branding_watermark_24">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/gb_code_dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:backgroundTint="@android:color/black"
            android:hint="@string/dialog_code"
            android:lines="1"
            android:maxLength="8"
            android:inputType="number"
            android:imeOptions="actionNext"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.Design.TextInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp"
        android:id="@+id/til_dialog_money"
        android:theme="@style/Widget.Design.TextInputLayout"
        android:textColorHint="@android:color/black"
        app:hintTextColor="@color/black"
        app:startIconDrawable="@drawable/ic_money_payment_24">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/gb_money_dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:backgroundTint="@android:color/black"
            android:maxLength="8"
            android:hint="@string/mondey_dialog"
            android:inputType="number"
            android:lines="1"
            android:imeOptions="actionNext"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

    </com.google.android.material.textfield.TextInputLayout>
</androidx.appcompat.widget.LinearLayoutCompat>